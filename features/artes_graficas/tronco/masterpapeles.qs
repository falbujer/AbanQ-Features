//// INTERNA /////////////////////////////////////////////////////
/** \C El Al copiar un artículo se copian también sus tarifas y sus precios por proveedor.
\end */
function interna_init()
{
	var cursor:FLSqlCursor = this.cursor();
	this.iface.tdbRecords = this.child("tableDBRecords");
	cursor.setMainFilter("codfamilia = 'PAPE'");
	var cols:Array = ["referencia", "descripcion", "codcalidad", "anchopliego", "altopliego", "gramaje", "codmarcapapel", "pvp", "observaciones"];
	this.iface.tdbRecords.setOrderCols(cols);
	this.iface.tdbRecords.refresh();
}
