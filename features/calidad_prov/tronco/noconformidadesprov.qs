function calidadProv_init()
{
}

function calidadProv_validateForm()
{
	var util:FLUtil = new FLUtil();	
	var estado:String = this.child("fdbEstado").value();
	
	if (estado == 1 && (!this.child("fdbResueltaPor").value() || !this.child("fdbFechaResolucion").value()))
	{
		MessageBox.warning(util.translate("scripts", "Para cerrar la no conformidad debe rellenarse la fecha de resolución y el usuario que la resuelve"),
					MessageBox.Ok, MessageBox.NoButton, MessageBox.NoButton);
		return false;
	}
	return true;
}

