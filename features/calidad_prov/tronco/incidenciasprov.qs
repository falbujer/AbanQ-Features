////////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////
//// INTERNA /////////////////////////////////////////////////////

function interna_init()
{
}

//// INTERNA /////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////

/** @class_definition calidadProv */
/////////////////////////////////////////////////////////////////
//// CALIDAD_PROV /////////////////////////////////////////////////

function calidadProv_init()
{
	var cursor:FLSqlCursor = this.cursor();
	
	if (cursor.modeAccess() == cursor.Insert) 
		cursor.setValueBuffer("valor", 1)

	if (cursor.valueBuffer("valor") == -1) 
		this.child("chkMenosUno").setChecked(true);
	else			
		this.child("chkMasUno").setChecked(true);
	
	connect(this.child("btgValor"), "clicked(int)", this, "iface.cambioValor");
}

function calidadProv_cambioValor(valor)
{
	switch(valor) {
		case 0: //-1
			this.cursor().setValueBuffer("valor", -1);
			break
		case 1: //+1
			this.cursor().setValueBuffer("valor", 1);
			break
	}
}

