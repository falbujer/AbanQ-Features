/** @file */

/** @class_declaration interna */
////////////////////////////////////////////////////////////////////////////
//// DECLARACION ///////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////
//// INTERNA /////////////////////////////////////////////////////
class interna {
    var ctx:Object;
    function interna( context ) { this.ctx = context; }
    function init() { this.ctx.interna_init(); }
}
//// INTERNA /////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////

/** @class_declaration oficial */
//////////////////////////////////////////////////////////////////
//// OFICIAL /////////////////////////////////////////////////////
class oficial extends interna {
	var tbnCambiarRuta:Object;
	var lblRuta:Object;
    function oficial( context ) { interna( context ); } 
	function cambiarRuta():String {
		return this.ctx.oficial_cambiarRuta();
	}
}
//// OFICIAL /////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////

/** @class_declaration head */
/////////////////////////////////////////////////////////////////
//// DESARROLLO /////////////////////////////////////////////////
class head extends oficial {
    function head( context ) { oficial ( context ); }
}
//// DESARROLLO /////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////

/** @class_declaration ifaceCtx */
/////////////////////////////////////////////////////////////////
//// INTERFACE  /////////////////////////////////////////////////
class ifaceCtx extends head {
    function ifaceCtx( context ) { head( context ); }
}

const iface = new ifaceCtx( this );
//// INTERFACE  /////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////

/** @class_definition interna */
////////////////////////////////////////////////////////////////////////////
//// DEFINICION ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////
//// INTERNA /////////////////////////////////////////////////////
function interna_init()
{
	var util:FLUtil;

	this.iface.tbnCambiarRuta = this.child("tbnCambiarRuta");
	this.iface.lblRuta = this.child("lblRuta");

	connect(this.iface.tbnCambiarRuta,"clicked()",this,"iface.cambiarRuta()");

	var ruta:String = util.readSettingEntry("scripts/flfactinfo/rutaExportacionTablas");
	if(ruta && ruta != "")
		this.iface.lblRuta.text = ruta;
}
//// INTERNA /////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////

/** @class_definition oficial */
//////////////////////////////////////////////////////////////////
//// OFICIAL /////////////////////////////////////////////////////
function oficial_cambiarRuta()
{
	var util:FLUtil = new FLUtil();
	var ruta:String = FileDialog.getOpenFileName( util.translate( "scripts", "" ), util.translate( "scripts", "Ruta de la plantilla" ) );
	
	if ( !File.exists( ruta ) ) {
		MessageBox.information( util.translate( "scripts", "Plantilla errónea" ),
								MessageBox.Ok, MessageBox.NoButton, MessageBox.NoButton );
		return;
	}
	
	this.iface.lblRuta.text = ruta;
	util.writeSettingEntry("scripts/flfactinfo/rutaExportacionTablas", ruta);
}
//// OFICIAL /////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////

/** @class_definition head */
