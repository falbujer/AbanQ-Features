function oficial_filtrarTabla()
{
	var filtro = this.iface.dameFiltroCC();

	if (filtro && filtro != "") {
		this.child("tableDBRecords").cursor().setMainFilter(filtro);
		this.child("tableDBRecords").refresh();
	}
}

